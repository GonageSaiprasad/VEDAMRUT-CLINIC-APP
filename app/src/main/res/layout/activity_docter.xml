<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFEB3B"
    tools:context=".Docter">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/center"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_margin="0dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="20dp">

            <ImageView
                android:layout_width="191dp"
                android:layout_height="223dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="15dp"
                android:src="@drawable/sir" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="245dp"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="40dp"
                android:background="#4e5661" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="240dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="35dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="05dp"
                        android:text="Name : Dr. Vijayendra H. Bachhav "
                        android:textAlignment="center"
                        android:textColor="#000"
                        android:textSize="20dp" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginRight="40dp"
                        android:background="#4e5661" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="--Degree--"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:textSize="23dp"
                        android:textAlignment="center"
                       />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="Yerala Ayurvedic Medical College and Research centre, Kharghar, Navi Mumbai."
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="40dp"
                        android:background="#4e5661" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="--Panchakarma Training--"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:textSize="23dp"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="1. Arya Vaidyashala, Kottakkal, Kerala."
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="2. Sane Guruji Aarogya Mandir,Malegoan."
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="40dp"
                        android:background="#4e5661" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="-- Experience --"
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_height="wrap_content"
                        android:text="13 Years Experience (Kalyan) "
                        android:textColor="#000"
                        android:layout_marginTop="5dp"
                        android:textSize="20dp"
                        android:textAlignment="center"
                        />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="40dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="40dp"
                        android:background="#4e5661" />


                </LinearLayout>
            </ScrollView>

        </androidx.cardview.widget.CardView>


    </LinearLayout>


</RelativeLayout>