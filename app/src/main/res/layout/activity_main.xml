<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F7F30B"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#02E980"
        android:layout_height="151dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:text="VEDAMRUT"
            android:id="@+id/name"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="40dp"/>
        <TextView
            android:layout_width="match_parent"
            android:text="Multi-Speciality Ayurvedic Clinic"
            android:textAlignment="center"
            android:textSize="20dp"
            android:id="@+id/firstline"
            android:textColor="#FF0000"
            android:layout_below="@+id/name"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="And"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#FF0000"
            android:id="@+id/secondline"
            android:layout_below="@+id/firstline"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="match_parent"
            android:text="Panchakarma Clinic"
            android:textAlignment="center"
            android:textSize="20dp"
            android:textColor="#FF0000"
            android:id="@+id/textviewclinic"
            android:layout_below="@+id/secondline"
            android:layout_height="30dp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_below="@+id/textviewclinic"
            android:background="#4e5661"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/center"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#FFFFFF">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/logo" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Center"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textviewclinic"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="15dp"
                android:background="#B716171A" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/doctor"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#FFFFFF">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/doctor" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Doctor"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textviewclinic"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="113dp"
                android:layout_marginRight="15dp"
                android:background="#B716171A" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/treatment"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#FFFFFF">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="87dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/pro" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Panchakarma Treatment"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textviewclinic"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="100dp"
                android:layout_marginRight="15dp"
                android:background="#B716171A" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/testimonial"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#FFFFFF">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/spa" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Testimonial"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="18dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textviewclinic"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="15dp"
                android:background="#B716171A" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/gallery"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#FFFFFF">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/picture" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Gallery"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textviewclinic"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="15dp"
                android:background="#B716171A" />


        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/product"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#FFFFFF">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/order" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Product"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textviewclinic"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="15dp"
                android:background="#B716171A" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="362dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/facilities"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#FFFFFF">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/hospital" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Facilities"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textviewclinic"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="15dp"
                android:background="#B716171A" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/parshan"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#FFFFFF">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/liquid" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Suwarnprashan"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="15dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textviewclinic"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="115dp"
                android:layout_marginRight="15dp"
                android:background="#B716171A" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/contactus"
            android:layout_width="110dp"
            android:layout_height="140dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#FFFFFF">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp"
                android:src="@drawable/contactus" />

            <TextView
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Contact US"
                android:textAlignment="center"
                android:textColor="#000"
                android:textSize="20dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/textviewclinic"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="110dp"
                android:layout_marginRight="15dp"
                android:background="#B716171A" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>

